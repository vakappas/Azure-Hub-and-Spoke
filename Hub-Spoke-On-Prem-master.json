{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "lab-user",
            "metadata": {
                "description": "Password to be configured in the NVA (user is lab-user)"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": null,
            "metadata": {
                "description": "Password to be configured in the NVA (user is lab-user)"
            }
        },
        "config": {
            "type": "object",
            "defaultValue": {
                "vnets": [
                    {
                        "vnetName": "on-prem-vnet",
                        "vnetPrefix": "10.0.0.0/24",
                        "GatewaySubnetPrefix": "10.0.0.0/27",
                        "subnet1Name": "MGMT",
                        "subnet1Prefix": "10.0.0.32/27",
                        "subnet2Name": "Clients",
                        "subnet2Prefix": "10.0.0.64/27",
                        "subnet3Name": "ADDS",
                        "subnet3Prefix": "10.0.0.96/27",
                        "subnet4Name": "Servers",
                        "subnet4Prefix": "10.0.0.128/27",
                        "nvaType": "ubuntu",
                        "nvaName": "OnPremFW",
                        "nvaip0": "10.0.0.41",
                        "nvaip1": "10.0.0.71",
                        "createGw": "no",
                        "gwName": "OnPremGW",
                        "linuxvmName": "LMGMT01",
                        "windowsvmName": "WMGMT01",
                        "DCvmName": "OnPremDC01",
                        "domainName": "vklab.local"                        
                    },
                    {
                        "vnetName": "hub-vnet",
                        "vnetPrefix": "10.1.0.0/24",
                        "GatewaySubnetPrefix": "10.1.0.0/27",
                        "subnet1Name": "DMZ-Out",
                        "subnet1Prefix": "10.1.0.32/27",
                        "subnet2Name": "DMZ-In",
                        "subnet2Prefix": "10.1.0.64/27",
                        "subnet3Name": "ADDS",
                        "subnet3Prefix": "10.1.0.96/27",
                        "subnet4Name": "MGMT",
                        "subnet4Prefix": "10.1.0.128/27",
                        "nvaType": "ubuntu",
                        "nvaName": "OnPremFW",
                        "nvaip0": "10.1.0.41",
                        "nvaip1": "10.1.0.71",
                        "createGw": "no",
                        "gwName": "hubGW",
                        "linuxvmName": "LMGMT01",
                        "windowsvmName": "WMGMT01",
                        "DCvmName": "OnPremDC01"                       
                    },
                    {
                        "vnetName": "spoke-vnet",
                        "vnetPrefix": "10.1.1.0/24",
                        "subnet1Name": "Web",
                        "subnet1Prefix": "10.1.1.32/27",
                        "subnet2Name": "SQL",
                        "subnet2Prefix": "10.1.1.64/27",
                        "WebvmName": "Web01",
                        "WebvmSize": "Standard_D2s_v3",
                        "SQLvmName": "SQL01",
                        "SQLvmSize": "Standard_D4s_v3"                     
                    }
                ]
            }
        }
    },
    "variables": {
        "networkApiVersion": "2018-08-01",
        "deploymentApiVersion": "2017-05-10",
        "onpremTemplateUri": "[uri(deployment().properties.templateLink.uri, 'on-prem-vnet.json')]",
        "hubTemplateUri": "[uri(deployment().properties.templateLink.uri, 'hub-vnet.json')]",
        "spokeTemplateUri": "[uri(deployment().properties.templateLink.uri, 'spoke-vnet.json')]",
        "on-prem-vnet":"[parameters('config')['vnets'][0]]",
        "hub-vnet":"[parameters('config')['vnets'][1]]",
        "spoke-vnet": "[parameters('config')['vnets'][2]]"
    },
    "resources": [
		{
			"comments": "Create the On-Prem vnet along with NVA, management VMs & DC",
			"name": "on-prem",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "[variables('deploymentApiVersion')]",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('onpremTemplateUri')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "vnetName": "[variables('on-prem-vnet').vnetName]",
                    "vnetPrefix": "[variables('on-prem-vnet').vnetPrefix]",
                    "GatewaySubnetPrefix": "[variables('on-prem-vnet').GatewaySubnetPrefix]",
                    "subnet1Name": "[variables('on-prem-vnet').subnet1Name]",
                    "subnet1Prefix": "[variables('on-prem-vnet').subnet1Prefix]",
                    "subnet2Name": "[variables('on-prem-vnet').subnet2Name]",
                    "subnet2Prefix": "[variables('on-prem-vnet').subnet2Prefix]",
                    "subnet3Name": "[variables('on-prem-vnet').subnet3Name]",
                    "subnet3Prefix": "[variables('on-prem-vnet').subnet3Prefix]",
                    "subnet4Name": "[variables('on-prem-vnet').subnet4Name]",
                    "subnet4Prefix": "[variables('on-prem-vnet').subnet4Prefix]",
                    "nvaType": "[variables('on-prem-vnet').nvaType]",
                    "nvaName": "[variables('on-prem-vnet').nvaName]",
                    "nvaip0": "[variables('on-prem-vnet').nvaip0]",
                    "nvaip1": "[variables('on-prem-vnet').nvaip1]",
                    "createGw": "[variables('on-prem-vnet').createGw]",
                    "gwName": "[variables('on-prem-vnet').gwName]",
                    "linuxvmName": "[variables('on-prem-vnet').linuxvmName]",
                    "windowsvmName": "[variables('on-prem-vnet').windowsvmName]",
                    "DCvmName": "[variables('on-prem-vnet').DCvmName]",
                    "domainName": "[variables('on-prem-vnet').domainName]"
                }
            },
            "dependsOn": [
              
            ]
        },
        {
			"comments": "Create the hub vnet along with NVA, management VMs & DC",
			"name": "hub",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "[variables('deploymentApiVersion')]",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('hubTemplateUri')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "vnetName": "[variables('hub-vnet').vnetName]",
                    "vnetPrefix": "[variables('hub-vnet').vnetPrefix]",
                    "GatewaySubnetPrefix": "[variables('hub-vnet').GatewaySubnetPrefix]",
                    "subnet1Name": "[variables('hub-vnet').subnet1Name]",
                    "subnet1Prefix": "[variables('hub-vnet').subnet1Prefix]",
                    "subnet2Name": "[variables('hub-vnet').subnet2Name]",
                    "subnet2Prefix": "[variables('hub-vnet').subnet2Prefix]",
                    "subnet3Name": "[variables('hub-vnet').subnet3Name]",
                    "subnet3Prefix": "[variables('hub-vnet').subnet3Prefix]",
                    "subnet4Name": "[variables('hub-vnet').subnet4Name]",
                    "subnet4Prefix": "[variables('hub-vnet').subnet4Prefix]",
                    "nvaType": "[variables('hub-vnet').nvaType]",
                    "nvaName": "[variables('hub-vnet').nvaName]",
                    "nvaip0": "[variables('hub-vnet').nvaip0]",
                    "nvaip1": "[variables('hub-vnet').nvaip1]",
                    "createGw": "[variables('hub-vnet').createGw]",
                    "gwName": "[variables('hub-vnet').gwName]",
                    "linuxvmName": "[variables('hub-vnet').linuxvmName]",
                    "windowsvmName": "[variables('hub-vnet').windowsvmName]",
                    "DCvmName": "[variables('hub-vnet').DCvmName]"
                }
            },
            "dependsOn": [
              
            ]
        },
        {
			"comments": "Create the spoke vnet with a two tier app ",
			"name": "spoke",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "[variables('deploymentApiVersion')]",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('spokeTemplateUri')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "vnetName": "[variables('hub-vnet').vnetName]",
                    "vnetPrefix": "[variables('spoke-vnet').vnetPrefix]",
                    "subnet1Name": "[variables('spoke-vnet').subnet1Name]",
                    "subnet1Prefix": "[variables('spoke-vnet').subnet1Prefix]",
                    "subnet2Name": "[variables('spoke-vnet').subnet2Name]",
                    "subnet2Prefix": "[variables('spoke-vnet').subnet2Prefix]",
                    "WebvmName": "[variables('spoke-vnet').WebvmName]",
                    "WebvmSize": "[variables('spoke-vnet').WebvmSize]",
                    "SQLvmName": "[variables('spoke-vnet').SQLvmName]",
                    "SQLvmSize": "[variables('spoke-vnet').SQLvmSize]"           
                }
            },
            "dependsOn": [
              
            ]
        }
    ]
}
